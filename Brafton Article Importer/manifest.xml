<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="1.6.0" method="upgrade">
	<name>Brafton Articles</name>
	<creationDate>August 2012</creationDate>
	<author>Michael Walton</author>
	<authorEmail>michael.walton@contentlead.com</authorEmail>
	<authorUrl>http://www.contentlead.com</authorUrl>
	<copyright>Copyright 2012</copyright>
	<license>GPL</license>
	<version>0.3</version>
	<description>Imports articles from Brafton/ContentLEAD/Castleford XML feeds</description>
	<scriptfile>com_braftonarticles.script.php</scriptfile>
 
	<install> <!-- Runs on install -->
		<sql>
			<file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
		</sql>
	</install>
	<uninstall> <!-- Runs on uninstall -->
		<sql>
			<file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
		</sql>
	</uninstall>
	<update> <!-- Runs on update; New in 1.6 -->
		<schemas>
			<schemapath type="mysql">sql/updates/mysql</schemapath>
		</schemas>
	</update>
 
	<files folder="site">
		<filename>index.html</filename>
		<filename>braftonarticles.php</filename>
		<filename>controller.php</filename>
		<folder>views</folder>
		<folder>models</folder>
	</files>
 
	<administration>
		<menu>COM_BRAFTONARTICLES</menu>
		<files folder="admin">
			<filename>index.html</filename>
			<filename>braftonarticles.php</filename>
			<filename>controller.php</filename>
			<folder>controllers</folder>
			<folder>sql</folder>
			<folder>tables</folder>
			<folder>models</folder>
			<!-- views files section -->
			<folder>views</folder>
		</files>
	<languages folder="admin">
		<language tag="en-GB">language/en-GB/en-GB.com_braftonarticles.ini</language>
	</languages>		
	</administration>
	
	<!-- UPDATESERVER DEFINITION -->
    <updateservers>
		<server type="extension" priority="1" name="Article Importer Update Site">http://tech.contentlead.com/joomla/updates/2.5/update.xml</server>
    </updateservers>
	
	<!-- Media folder for component, contains logos and stuff -->
	<media destination="com_braftonarticles">
		<folder>css</folder>
		<folder>images</folder>
	</media>
		
</extension>